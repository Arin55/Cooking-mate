{
  "version": 2,
  "functions": {
    "server/api/index.js": {
      "runtime": "nodejs20.x",
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    { "src": "^/api/(.*)$", "dest": "server/api/index.js" },
    { "handle": "filesystem" },
    { "src": "^/login$", "dest": "client/login.html" },
    { "src": "^/signup$", "dest": "client/signup.html" },
    { "src": "^/profile$", "dest": "client/profile.html" },
    { "src": "^/recipes$", "dest": "client/recipes.html" },
    { "src": "^/gym$", "dest": "client/gym.html" },
    { "src": "^/calories$", "dest": "client/calories.html" },
    { "src": "^/(.*\\..*)$", "dest": "client/$1" },
    { "src": "^/(.*)$", "dest": "client/index.html" }
  ]
}
